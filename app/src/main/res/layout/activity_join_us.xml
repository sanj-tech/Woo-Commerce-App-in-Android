<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/scr8"

    tools:context=".JoinUsActivity">

    <ImageView
        android:id="@+id/register_app"
        android:layout_width="120dp"
        android:layout_height="106dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="45dp"
        android:src="@drawable/logo_shop"
        android:layout_marginRight="45dp"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/edtuserName"
        android:layout_width="368dp"
        android:layout_height="75dp"
        android:layout_below="@+id/register_app"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttondesign"
        android:hint="Name"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true" />



    <TextView

        android:layout_width="229dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="240dp"
        android:text="Online Shopping "
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="81dp" />


    <EditText
        android:id="@+id/edtPhoneNo"
        android:layout_width="368dp"
        android:layout_height="75dp"
        android:layout_below="@+id/edtuserName"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="35dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttondesign"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPhoneNo"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttondesign"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/register_buttn"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttonshape"
        android:text="Create Account"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        app:backgroundTint="#ff0000" />

</RelativeLayout>